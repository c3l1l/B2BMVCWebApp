
@model CustomerVM


<h4>Save Customer</h4>
<div class="container">
    <div class="row">
        <div class="col-md-6">

            <form method="post" asp-controller="Customers" asp-action="Save">

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Customer Name</label>
                    <input type="text" class="form-control" asp-for="Name" id="customerName" placeholder="Customer Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="Email" id="customerEmail" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input type="text" class="form-control" asp-for="Password" id="customerPassword" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="Customers" asp-action="Index" class="btn btn-primary">Back</a>
            </form>
        </div>
    </div>
</div>