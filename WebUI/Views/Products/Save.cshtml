
@model ProductVM


<h4>Save Product</h4>
<div class="container">
    <div class="row">
        <div class="col-md-6">

            <form method="post" asp-controller="Products" asp-action="Save">

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input type="text" class="form-control" asp-for="Name" id="productName" placeholder="Product Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Product Price</label>
                    <input type="text" class="form-control" asp-for="Price" id="productPrice" placeholder="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Product Name</label>
                    <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Back</a>

            </form>
        </div>
    </div>
</div>