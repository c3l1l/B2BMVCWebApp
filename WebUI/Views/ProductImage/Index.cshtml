@model List<ProductImageVM>
@{
}


<h4>Product Images</h4>
<div class="container">
    <div class="row">
        <div class="col">
            <a asp-action="Save" asp-controller="ProductImage" asp-route-productId="@ViewBag.ProductId" class="btn btn-info">Add New Image</a>
        </div>
    </div>
    <div class="row">
       
        @{
            if (Model != null && Model.Count > 0)
            {
                foreach (var productImage in Model)
                {
                    <div class="col-md-3 float-start">
                        <div class="card mx-3 my-3">
                            <div class="card">
                                <img src="~/images/products/@productImage.ImageUrl" style="width: 200px; height:200px;" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a asp-action="Delete" asp-controller="ProductImage" asp-route-id="@productImage.Id" class="btn btn-danger">Delete</a>
                                        @{
                                            if (productImage.IsMainImage)
                                            {
                                                <a disable class="btn btn-success">Main Image</a>
                                            }
                                            else
                                            {
                                                <a asp-action="SetMainImage" asp-controller="ProductImage" asp-route-id="@productImage.Id" class="btn btn-primary">Set Main Image</a>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-3 float-start">
                    <h3 class="text-danger fw-bold">Image Not Found !!</h3>
                </div>
            }
        }

    </div>
</div>