@model BasketItemVM
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<h4>Add Product To Cart</h4>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-controller="BasketItem" asp-action="BasketItemDetail">

                <div class=" from-group row">
                    <label asp-for="Product.Name" class="col-form-label col-sm-2">Product</label>
                    <div class="col-sm-10">
                        <input readonly type="text" class="form-control-plaintext" value="@Model.Product.Name" id="productName" placeholder="Product Name">
                    </div>
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class=" from-group row">
                    <label asp-for="Quantity" class="col-form-label col-sm-2">Quantity</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" min="1" step="1" asp-for="Quantity" id="quantity" placeholder="Quantity">
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class=" from-group row">
                    <label asp-for="Product.Price" class="col-form-label col-sm-2">Price</label>
                    <div class="col-sm-10">
                        <span> <input readonly type="text" class="form-control-plaintext" value="@Model.Product.Price" id="productPrice" placeholder="Price"></span>
                    </div>
                </div>
                <input type="hidden"  name="BasketId" value="@Model.BasketId"  class="hidden" />
                <input type="hidden"  name="ProductId" value="@Model.Product.Id" class="hidden" />
                <input type="hidden" name="appUserId" value="@UserManager.GetUserId(User)" />
                <button type="submit" class="btn btn-primary">Add To Cart</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>

            </form>
        </div>
    </div>
</div>